
@{
    ViewBag.Title = "OrderForm";
}

<h2>Make Your Order</h2>
<br />
<form class="col s12" action="addOrder" id="pizzaForm" data-toggle="validator">
    <div class="row">
    <!--Input for name-->
    <div class="input-field col s6">
        <label for="name"> Name </label>
            <input type="text" class="form-control" id="name" name="name" maxlength="30" data-error="Please Fill Out your Name" required>
            <div class="help-block with-errors"></div>
    </div>
    <!--Input for Phone-->
    <div class="input-field col s6">
        <label for="phone">Phone</label>
        <input type="tel" class="form-control" id="phone" maxlength="11" name="phone" data-error="Just in Case we need to call ya" required>
        <div class="help-block with-errors"></div>   
    </div>
    </div>
    <div class="row">
    <!--Input for address-->
    <div class="input-field col s6">
        <label for="address" class="col-sm-2">Address</label>
            <input type="text" class="form-control" id="address" name="address" maxlength="30" data-error="Just in case you we need to get it to you">
            <div class="help-block with-errors"></div>
        <input type="hidden" value="N/A" id="address" name="address">
    </div>
    
    <!--Input for Delivary-->
    <div class="input-field col s6">
            <input type="checkbox" value="true" id="delivary" name="delivary">
            <label for="delivary">Delivary</label>
            <input type="hidden" value="false" id="delivary" name="delivary">
    </div>
    </div>
    <br />

    <div id="pizzaSelect" class="input-field col s12">
    <!--Input for Pizza Size-->
        <div class="row">
        <input type="text" name="size[0]" style="display:none"id="size0" value="1" />
     
        <select class="size" alt="0">
            <option value="1">Small</option>
            <option value="2">Medium</option>
            <option value="3">Large</option>   
         </select>
    </div>
        <!--Input for toppings-->
        <div class="row">
       <input class="topping" type="checkbox" value="true" id="pepperoni[0]"  name="pepperoni[0]" />
        <label for="pepperoni[0]"> pepperoni</label>
        <input type="hidden" value="false" name="pepperoni[0]" />
        
        <input class="topping" type="checkbox" value="true" id="mushrooms[0]"  name="mushrooms[0]">
        <label for="mushrooms[0]">mushrooms</label>
        <input type="hidden" value="false" name="mushrooms[0]" />

        <input class="topping" type="checkbox" value="true" id="onions[0]"  name="onions[0]">
        <label for="onions[0]">onions</label>
        <input type="hidden" value="false" name="onions[0]" />

        <input class="topping" type="checkbox" value="true" id="sasusage[0]"  name="sasusage[0]">
        <label for="sasusage[0]">sasusage</label>
        <input type="hidden" value="false" name="sasusage[0]" />

        <input class="topping" type="checkbox" value="true" id="bacon[0]" name="bacon[0]">
        <label for="bacon[0]"> bacon</label>
        <input type="hidden" value="false" name="bacon[0]" />

        <input class="topping" type="checkbox" value="true" id="extracheese[0]" name="extracheese[0]">
        <label for="extracheese[0]">extraCheese</label>
        <input type="hidden" value="false" name="extracheese[0]" />

        <input class="topping" type="checkbox" value="true" id="blackOlives[0]" name="blackOlives[0]">
        <label for="blackOlives[0]"> blackOlives</label>
        <input type="hidden" value="false" name="blackOlives[0]" />

        <input class="topping" type="checkbox" value="true" id="spinach[0]" name="spinach[0]">
        <label for="spinach[0]"> spinach</label>
        <input type="hidden" value="false" name="spinach[0]" />

        <input class="topping" type="checkbox" value="true" id="pineapple[0]" name="pineapple[0]">
        <label for="pineapple[0]"> pineapple</label>
        <input type="hidden" value="false" name="pineapple[0]" />
       </div>
    </div>
    <input type="text" class="hide" id="amountOfPizza" name="amountOfPizza" value="1" />


    <button type="submit" class="btn btn-default">Submit</button>
   
</form>
